<h1>Workouts page</h1>
<br>
<h2>Click a workout name to see the workout detail page</h2>
<br>
<table id="workouts">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Date</th>
    <th scope="col">Description</th>
    <th scope="col">Exercises</th>
    <th></th>
  </tr>
<% @workouts.each do |w| %>
  <tr>
    <td><a href="/workouts/<%= w.id %>"><%= w.name %></a></td>
    <td><%= w.created_at.strftime("%m-%d-%y") %></td>
    <td><%= w.description %></td>
    <td><%= w.exercises.collect { |e| e.name }.join(", ") %></td>
    <td><a href="/workouts/new"><input type="submit" value="Clone"></a></td>
  </tr>
<% end %>
</table>
<br>
<a href="/workouts/new"><input type="submit" value="Create New Workout"></a>
