<h1>Workout detail page</h1>
<ul>
  <h2>Name: <%= @workout.name %></h2>
  <li>Date logged: <%= @workout.created_at.strftime("%Y-%m-%d") %></li>
  <li>Description: <%= @workout.description %></li>
  <li>Instructions: <%= @workout.instructions %></li>
</ul>
<br>
<h2>Exercises</h2>
<p>
<ol>
<% @workout.exercises.each do |e| %>
  <li>Name: <%= e.name %></li>
<ul>
  <li>Reps: <%= e.reps %></li>
  <li>Sets: <%= e.sets %></li>
</ul>
<br>
<% end %>
</ol>
</p>
<br>
<br>
<a href="/exercises/new"><input type="submit" value="Add Exercises to Workout!"></a>
<br>
<br>
<a href="/workouts/<%= @workout.id %>/edit"><input type="submit" value="Update Workout Details!"></a>
