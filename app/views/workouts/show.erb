<h1>Workout detail page</h1>
<br>
<ul>
  <h2><%= @workout.name %></h2>
  <li id="tab">Date logged: <%= @workout.created_at.strftime("%Y-%m-%d") %></li>
  <li id="tab">Description: <%= @workout.description %></li>
  <li id="tab">Instructions: <%= @workout.instructions %></li>
</ul>
<br>
<h2>Exercises</h2>
<p>

<table border="1">
<tbody>
<tr>
<th scope="col">No.</th>
<th scope="col">Name</th>
<th scope="col">Weight</th>
<th scope="col">Reps</th>
<th scope="col">Sets</th>
</tr>

<% @workout.exercises.each do |e| %>
<tr>
  <td></td>
  <td><%= e.name %></td>
  <td><%= e.weight %></td>
  <td><%= e.reps %></td>
  <td><%= e.sets %></td>
</tr>
<% end %>
</tbody>
</table>

<br>
<br>
<a href="/exercises/new"><input type="submit" value="Add Exercises to Workout!"></a>
<br>
<br>
<a href="/workouts/<%= @workout.id %>/edit"><input type="submit" value="Update Workout Details!"></a>
<br>
<br>
<a href="/workouts"><input type="submit" value="Return to Workout Index"></a>