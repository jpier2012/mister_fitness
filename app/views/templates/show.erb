<h1>Show Exercise!</h1>
<h2><%= @exercise.name %></h2>
  <ul>
  <li>Date logged: <%= @exercise.created_at.strftime("%a %m/%e/%y,%l:%M %p") %></li>
  <li>Description: <%= @exercise.description %></li>
  <li>Instructions: <%= @exercise.instructions %></li>
  <li>Weight: <%= @exercise.weight %></li>
  <li>Reps: <%= @exercise.reps %></li>
  <li>Sets: <%= @exercise.sets %></li>
  <li>User ID: <%= @exercise.workout.user_id %></li>
  <li>Workout ID: <%= @exercise.workout_id %></li>
  <li>ID: <%= @exercise.id %></li>
<br>
<a href="/exercises/<%= @exercise.id %>/edit"><input type="button" value="Edit Exercise"></a>
<br>
<br>
<a href="/workouts/<%= @exercise.workout_id %>"><input type="submit" value="Return to Workout"></a>
