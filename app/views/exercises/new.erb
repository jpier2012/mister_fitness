<h1>New Exercise!</h1>
<br>
<form action="/exercises" method="POST">

<label for="exercise[workout_id]">Choose an existing workout</label>
<select name="exercise[workout_id]">
<% @workouts.each do |w| %>
  <option value="<%= w.id %>" <%= "selected" if w.id = params[:exercise][:workout_id] %>><%= w.name %></option>
<% end %>
</select>
<br>
<br>
<label for="exercise[name]">Enter an exercise name: </label>
<input required type="text" name="exercise[name]">
<br>
<br>
<label for="exercise[description]">Enter a description: </label>
<textarea name="exercise[description]"></textarea>
<br>
<br>
<label for="exercise[instructions]">Enter instructions: </label>
<textarea name="exercise[instructions]"></textarea>
<br>
<br>
<label for="exercise[weight]">Enter a weight: </label>
<input type="text" name="exercise[weight]">
<br>
<br>
<label for="exercise[reps]">Enter reps: </label>
<input type="text" name="exercise[reps]">
<br>
<br>
<label for="exercise[sets]">Enter sets: </label>
<input type="text" name="exercise[sets]">
<br>
<br>
<br>
<input type="submit" value="Create Exercise!">
</form>
<br>
<a href="/exercises"><input type="submit" value="Go Back to Exercises Index"></a>
<br>
<br>
<a href="/workouts"><input type="submit" value="Return to Workout Index"></a>